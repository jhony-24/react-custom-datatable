{
    "compilerOptions": {
        "module": "commonjs",
        "types": [ "jest", "@testing-library/jest-dom" ],
        "lib": [ "ES2015","DOM","DOM.Iterable" ],
        "target": "es5",
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": true,
        "noEmit": true,
        "pretty": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "./lib/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}